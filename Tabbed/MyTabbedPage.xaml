<?xml version="1.0" encoding="utf-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:tabbedbottom="clr-namespace:Tabbed.TabViews"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
          
             x:Class="Tabbed.MyTabbedPage">
    <!--Pages can be added as references or inline android:TabbedPage.ToolbarPlacement="Bottom"-->

     <tabbedbottom:Page_ONE Title="Tab 1"  />
    <tabbedbottom:Page_TWO  Title="Tab 2" />
    <tabbedbottom:Page_THREE  Title="Tab 3" />
   <ContentPage Title="In 1">
       <ContentPage.Content>
           <StackLayout Padding="20,20">
               <Label Text="1 1"/>
           </StackLayout>
       </ContentPage.Content>
   </ContentPage>
     <ContentPage Title="In 2">
       <ContentPage.Content>
           <StackLayout Padding="20,20">
               <Label Text="2 2"/>
           </StackLayout>
       </ContentPage.Content>
   </ContentPage>
     <ContentPage Title="In 3 3">
       <ContentPage.Content>
           <StackLayout Padding="20,20">
               <Label Text="3 3"/>
           </StackLayout>
       </ContentPage.Content>
   </ContentPage>
</TabbedPage>
